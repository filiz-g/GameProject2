package Concrete;

import Abstract.GamerCheckService;
import Abstract.GamerService;
import Entities.Gamer;

public class GamerManager implements GamerService{

	
		GamerCheckService gamerCheckService;
		
		public GamerManager(GamerCheckService gamerCheckService) {
			this.gamerCheckService=gamerCheckService;
		}
		@Override
		public void add(Gamer gamer) {
			if(gamerCheckService.CheckIfRealPerson(gamer)) {
				
				super.add(gamer);
			}else {
				System.out.println("Kayýtlý böyle bir kullanýcý mevcut deðildir.");
				
			}
		
		//System.out.println("Kullanýcý eklendi :"+ gamer.getFirstName() + " " + gamer.getLastName());
		
	}

	@Override
	public void delete(Gamer gamer) {
		
		System.out.println("Kullanýcý silindi :" + gamer.getFirstName()+ " "+ gamer.getLastName());
		
	}

	@Override
	public void update(Gamer gamer) {
		System.out.println("Kulanýcý güncellendi :" + gamer.getFirstName()+ " "+ gamer.getLastName());
		
	}

}
